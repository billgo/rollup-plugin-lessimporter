{
  "name": "rollup-plugin-lessimporter",
  "npmName": "RollupPluginLessimporter",
  "version": "0.1.0",
  "description": "A rollup plugin providing ~ prefix as a way to tell less compiler that it should resolve path using a configured array of module directories.",
  "author": "Billgo",
  "license": "BSD-3-Clause",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "npm run lint && npm run compile",
    "compile": "rimraf lib && mkdir lib && babel src --out-dir lib",
    "lint": "prettier-eslint --write src/**/*.{js,jsx}"
  },
  "dependencies": {
    "magic-string": "^0.25.3",
    "rollup-pluginutils": "^2.8.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-preset-common": "^0.3.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "flow-bin": "^0.102.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "jest-coverage-badges": "^1.1.2",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "rimraf": "^2.6.3"
  },
  "babel": {
    "presets": [
      "common"
    ],
    "comments": false,
    "minified": false
  },
  "eslintConfig": {
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "babel",
      "prettier"
    ],
    "extends": [
      "plugin:prettier/recommended",
      "prettier/flowtype",
      "prettier/react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    }
  },
  "eslintIgnore": [
    "node_modules/*",
    "lib/*",
    "docs/*",
    "dist/*",
    "build/*",
    "coverage/*",
    "fixtures/*",
    "umd/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/billgo/rollup-plugin-lessimporter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/billgo/rollup-plugin-lessimporter.git"
  },
  "bugs": {
    "url": "https://github.com/billgo/rollup-plugin-lessimporter/issues"
  }
}
